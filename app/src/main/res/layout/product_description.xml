<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back"
        />

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/product_example"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/grey"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Groceries" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_prod_rs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            tools:text="Rs. 1,450.00"
            android:layout_weight="0.8"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/units_available"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_prod_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1 Kg"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:textSize="15sp"
        android:paddingLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Units Sold"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_units_sold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        tools:text="12 Kg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_prod_descp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        tools:text="It is a nutritious and healthy vegetable."
        android:paddingLeft="10dp"/>

</LinearLayout>
</ScrollView>